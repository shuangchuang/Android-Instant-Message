<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/with_gray_underline_pressed_blue"
    >
    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/conversation_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/default_portrait"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/conversation_portrait"
        android:layout_toRightOf="@+id/conversation_portrait"
        android:layout_toStartOf="@+id/conversation_linerlast"
        android:layout_toLeftOf="@+id/conversation_linerlast"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/conversation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="2dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#111"
            />
        <TextView
            android:id="@+id/conversation_lastmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#999"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/conversation_linerlast"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="end"
        >
        <TextView
            android:id="@+id/conversation_lasttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="#999"
            android:maxLength="10"
            />
        <TextView
            android:id="@+id/conversation_newmessage_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_red"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:maxLength="2"
            android:textColor="#fff"
            />
    </LinearLayout>

</RelativeLayout>
