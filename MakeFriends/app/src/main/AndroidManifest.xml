<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wtr.makefriends">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <application
        android:name="com.example.wtr.makefriends.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.wtr.makefriends.activity.MainActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.wtr.makefriends.activity.LoginActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.NewUserActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.AddFriendsActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.FindNewFriendsActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.UserSettingActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.ShowUserActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.ShowPeopleActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.ShowConversationActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.CreateGroupActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.ShowGroupActivity"></activity>
        <activity android:name="com.example.wtr.makefriends.activity.SetFriendsOptionActivity"></activity>

        <service android:name="com.example.wtr.makefriends.service.XMPPService"></service>

    </application>

</manifest>